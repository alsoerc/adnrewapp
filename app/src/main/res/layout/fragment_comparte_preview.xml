<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comparte_preview"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_comparte"
        android:orientation="vertical"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:id="@+id/comparte_username_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ana Luz"
            style="@style/CompartePreview"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECIBIRÃ"
            style="@style/CompartePreview"/>

        <TextView
            android:id="@+id/comparte_points_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CompartePreview"
            android:text="10Wapps"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="30dp">

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:textColor="@color/colorRed"
                android:backgroundTint="@color/colorWhite"/>

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorGreen"
                android:textColor="@color/colorWhite"
                android:text="Enviar"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>