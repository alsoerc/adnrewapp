<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrayLight</item>
        <item name="colorPrimaryDark">@color/colorGrayLight</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="TextViewData">
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="color">@color/colorPrimaryDark</item>
    </style>

    <style name="FragmentContainers">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">10dp</item>
    </style>

    <style name="ListData">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CompartePreview">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">7dp</item>
    </style>

    <style name="LoginBtn" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@color/orangeLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">12sp</item>

    </style>



</resources>
